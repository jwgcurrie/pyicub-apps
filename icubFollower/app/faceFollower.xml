<application>

    <name>Face Follower</name>

    <module>
        <name>python3</name>
        <parameters>$ENV{PYICUB_APPS_PATH}/icubFollower/src/faceFollower.py</parameters>
        <node>$ENV{ICUBSRV_HOST}</node>
    </module>


    <connection>
        <from>/grabber</from>
        <to>/faceLandmarks/image:i</to>
        <protocol>udp</protocol>
    </connection>

	<connection>
        <from>/faceLandmarks/image:o</from>
        <to>/icubSim/texture/screen</to>
        <protocol>udp</protocol>
    </connection>

  	<connection>
  	  	<from>/icubSim/cam/right</from>
  	  	<to>/face</to>
  	  	<protocol>udp</protocol>
  	</connection>

</application>